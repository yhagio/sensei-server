{
  "name": "sensei-server",
  "version": "0.1.0",
  "description": "Sensei server",
  "main": "dist/app.js",
  "scripts": {
    "-------- PROD --------------": "",
    "prod": "export NODE_ENV=produtcion && npm run build && node dist/app.js",
    "-------- DEV ---------------": "",
    "dev": "export NODE_ENV=development && npm run build && node dist/app.js",
    "watch-tsc": "tsc -w",
    "watch-node": "npm run copygraphql && export NODE_ENV=development && nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-tsc\" \"npm run watch-node\"",
    "-------- BUILD -------------": "",
    "build": "npm run format && npm run lint && tsc && npm run copygraphql",
    "copygraphql": "copyfiles -u 1 src/**/*.graphql dist/",
    "-------- TEST --------------": "",
    "lint": "tslint 'src/**/*.ts'",
    "fixlint": "tslint 'src/**/*.ts' --fix",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "test": "export NODE_ENV=test && npm run format && npm run lint && nyc mocha",
    "---------MIGRATION----------": "",
    "migrate": "NODE_ENV=development ./node_modules/.bin/sequelize db:migrate",
    "rollback": "NODE_ENV=development ./node_modules/.bin/sequelize db:migrate:undo",
    "migrate:prod": "NODE_ENV=production ./node_modules/.bin/sequelize db:migrate",
    "rollback:prod": "NODE_ENV=production ./node_modules/.bin/sequelize db:migrate:undo"
  },
  "keywords": [
    "Node.js",
    "Typescript",
    "Express"
  ],
  "author": "Yuichi Hagio",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.3.1",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "config": "^3.0.1",
    "copyfiles": "^2.1.0",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "lodash.merge": "^4.6.1",
    "pg": "^7.7.1",
    "sequelize": "^4.42.0",
    "typeorm": "^0.2.9",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/compression": "^0.0.36",
    "@types/config": "^0.0.34",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.4",
    "@types/helmet": "^0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash.merge": "^4.6.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/sequelize": "^4.27.35",
    "@types/sinon": "^7.0.2",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "concurrently": "^4.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "sequelize-cli": "^5.4.0",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
